@model BudgetFinal.Models.BudgetLimit

@if (ViewData["Title"] != null)
{
    <h2>@ViewData["Title"]</h2>
}
else
{
    <h2>Default Title</h2>
}

@{
    ViewData["Title"] = "Budget Management";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null)
{
    <form asp-action="Update" method="post">
        <div class="form-group">
            <label for="MonthlyLimit">Monthly Limit</label>
            <input type="number" class="form-control" id="MonthlyLimit" name="MonthlyLimit" value="@Model.MonthlyLimit" required />
        </div>

        <div class="form-group">
            <label for="YearlyLimit">Yearly Limit</label>
            <input type="number" class="form-control" id="YearlyLimit" name="YearlyLimit" value="@Model.YearlyLimit" required />
        </div>

        <button type="submit" class="btn btn-primary">Update Budget</button>
    </form>
}
else
{
    <p>Budget limit data is not available.</p>
}
