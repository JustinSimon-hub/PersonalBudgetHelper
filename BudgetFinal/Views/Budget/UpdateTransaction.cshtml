@model Transaction

<h2>Update Transaction</h2>

<form asp-action="UpdateTransaction" method="post">
    <div class="form-group">
        <label>Description</label>
        <input type="text" name="Description" value="@Model.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>Amount</label>
        <input type="number" name="Amount" value="@Model.Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label>Date</label>
        <input type="date" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>
