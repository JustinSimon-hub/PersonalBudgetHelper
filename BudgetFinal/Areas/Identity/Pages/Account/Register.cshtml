@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }
</style>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-primary">Create Your Account</h2>
                        <p class="text-muted">Start managing your budget today</p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-semibold">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text">📧</span>
                                <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="your@email.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-semibold">Password</label>
                            <div class="input-group">
                                <span class="input-group-text">🔒</span>
                                <input asp-for="Input.Password" type="password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="Create a strong password" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            <small class="text-muted">Must be at least 6 characters long</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                            <div class="input-group">
                                <span class="input-group-text">🔒</span>
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="Re-enter your password" />
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">
                                <strong>Create Account</strong>
                            </button>
                        </div>

                        <div class="text-center mb-3">
                            <small class="text-muted">
                                By creating an account, you agree to our Terms of Service and Privacy Policy
                            </small>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-0 text-muted">
                            Already have an account? 
                            <a class="fw-bold text-primary text-decoration-none" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">
                                Sign in here
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            console.log("Register page loaded");

            $('#registerForm').submit(function(e) {
                console.log("Form submitting...");
                if (!$(this).valid()) {
                    console.log("Form validation failed");
                    e.preventDefault();
                    return false;
                }
                console.log("Form is valid, submitting to server");
            });

            $('#registerSubmit').click(function() {
                console.log("Register button clicked");
            });
        });
    </script>
}
