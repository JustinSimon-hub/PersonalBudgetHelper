@model BudgetFinal.Models.BudgetViewModel

<h2>Update Transaction</h2>

<form asp-controller="Budget" asp-action="UpdateTransaction" asp-route-id="@Model.NewTransaction.Id" method="post">
     <input type="hidden" asp-for="NewTransaction.Id" />
    <div class="form-group">
        <label>Description</label>
        <input type="text" asp-for="NewTransaction.Description" class="form-control" />
        <span asp-validation-for="NewTransaction.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Amount</label>
        <input type="number" asp-for="NewTransaction.Amount" class="form-control" />
        <span asp-validation-for="NewTransaction.Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Date</label>
        <input type="date" asp-for="NewTransaction.Date" class="form-control" />
        <span asp-validation-for="NewTransaction.Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Category</label>
        <input type="text" asp-for="NewTransaction.Category" class="form-control" />
        <span asp-validation-for="NewTransaction.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>
