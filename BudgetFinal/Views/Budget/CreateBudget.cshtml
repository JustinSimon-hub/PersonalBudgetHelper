@{
    ViewData["Title"] = "Create Budget";
}

@if (TempData["BudgetAlert"] != null)
{
    <div class="alert alert-warning">
        @TempData["BudgetAlert"]
    </div>
}

<h2>Create Budget</h2>
<form asp-action="CreateBudgetGoal" method="post">
    <div class="form-group">
        <label for="StartDate">Start Date:</label>
        <input type="date" id="StartDate" name="StartDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="EndDate">End Date:</label>
        <input type="date" id="EndDate" name="EndDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="LimitAmount">Budget Limit:</label>
        <input type="number" step="0.01" id="LimitAmount" name="LimitAmount" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
